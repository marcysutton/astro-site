---
export interface Props {
  className?: string;
  subtitle: string;
  subhead?: string;
  items: Array<{id: string; name: string; link: string}>;
  listName: string;
  linkNewWindow?: boolean;
}

const {
  className = '',
  subtitle,
  subhead,
  items,
  listName,
  linkNewWindow = false
} = Astro.props;
---

<div class={`link-list ${className}`}>
  <h2 class="subhead">{subtitle}</h2>
  <ul>
    {items.map(item => (
      <li key={item.id}>
        <a
          href={item.link}
          target={linkNewWindow ? '_blank' : undefined}
          rel={linkNewWindow ? 'noopener noreferrer' : undefined}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
</div>
