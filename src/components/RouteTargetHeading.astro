---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  targetID?: string;
  className?: string;
}

const { level = 1, targetID = 'global-nav', className = '' } = Astro.props;
const HeadingTag = `h${level}` as keyof HTMLElementTagNameMap;
---

<HeadingTag class={`routeSkipHeading ${className}`}>
  <a
    href={`#${targetID}`}
    id="skip-main"
    class="routeSkipLink"
    aria-label="Skip to global navigation"
  >
  </a>
  <slot />
</HeadingTag>

<style>
.routeSkipHeading {
  position: relative;
}

.routeSkipLink {
  position: absolute;
  left: -10000px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

.routeSkipLink:focus {
  position: absolute;
  left: 6px;
  top: 7px;
  width: auto;
  height: auto;
  z-index: 999999;
  background: #fff;
  padding: 6px;
  text-decoration: none;
  border: 1px solid #000;
}
</style>